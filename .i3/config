# colours vibrant
set $bg     #393939
set $fg     #E8E9CA
set $hi     #D75F00
set $ac     #D75F00
set $tx     #E8E9CA
set $ia     #6C6C6C

set $be     #4A708B 
set $yw     #EEE685
set $gn     #0EF318
set $rd     #872F00

#                               border      background  text        indicator
client.focused                  $ac         $ac         $tx         $rd
client.unfocused                $bg         $bg         $ia
client.focused_inactive         $bg         $bg         $ac
client.urgent                   $rd         $rd         $tx

new_window 1pixel
# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        colors {
            background          $bg
            statusline          $fg
            separator           $rd
            focused_workspace   $ac         $ac          $tx
            active_workspace    $ac         $bg          $tx
            inactive_workspace  $bg         $bg          $ia
            urgent_workspace    $bg         $bg          $ac
        }
        position top
        #status_command i3status -c ~/.i3/i3status.conf
        #status_command conky -c ~/.conkyrc
        status_command .i3/conky-i3bar
}

for_window [class="KeePass"] floating enable

exec --no-startup-id bash ~/xrandr.sh
exec --no-startup-id xset -b
exec --no-startup-id xrdb ~/.Xresources
exec --no-startup-id nitrogen --restore
